<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    // Image style
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    // Font style
    <style name="BaseTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_100</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    // Размерность dp для шрифтов установлена для устранения искажения текстовых элементов при
    // установленных нестандартных размерах шрифта в телефоне

    <style name="SF_Pro_Display_medium_10dp_regular" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10dp</item>
        <item name="android:lineHeight" tools:targetApi="p">11dp</item>
    </style>

    <style name="SF_Pro_Display_medium_14dp_regular" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineHeight" tools:targetApi="p">16.1dp</item>
    </style>

    <style name="SF_Pro_Display_medium_18dp_regular" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:lineHeight" tools:targetApi="p">22dp</item>
    </style>

    <style name="SF_Pro_Display_medium_20dp_regular" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
        <item name="android:lineHeight" tools:targetApi="p">25dp</item>
    </style>

    <style name="H1" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:lineHeight" tools:targetApi="p">21.6dp</item>
    </style>

    <style name="H3" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lineHeight" tools:targetApi="p">17.6dp</item>
    </style>

    <style name="FoodItemName" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineHeight" tools:targetApi="p">14.7dp</item>
    </style>

    <style name="TabItemName" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineHeight" tools:targetApi="p">14.7dp</item>
    </style>

    <style name="ProductTitle" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lineHeight" tools:targetApi="p">16.8dp</item>
    </style>

    <style name="ProductPrice" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineHeight" tools:targetApi="p">14.7dp</item>
    </style>

    <style name="ProductWeight" parent="ProductPrice">
        <item name="android:textColor">@color/black_40</item>
    </style>

    <style name="ProductDescription" parent="ProductPrice">
        <item name="android:textColor">@color/black_65</item>
        <item name="android:lineHeight" tools:targetApi="p">15.4dp</item>
    </style>

    <style name="BasketCounter" parent="BaseTextAppearance">
        <item name="font">@font/sf_pro_display_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineHeight" tools:targetApi="p">14.7dp</item>
    </style>

    // Tabs

    <style name="TabItemNameSelected" parent="TabItemName">
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="TabItemNameUnselected" parent="TabItemName">
        <item name="android:textColor">@color/black_100</item>
    </style>

    //Buttons

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/H3</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/corner_10dp</item>

        <item name="android:textColor">@color/color_button_text</item>
        <item name="backgroundTint">@color/color_button_tint</item>
    </style>

</resources>