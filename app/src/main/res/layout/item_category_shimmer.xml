<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_margin="@dimen/padding_4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_shimmer_r10"
        android:padding="@dimen/padding_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,1:1" >

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/textShimmer1"
        android:layout_width="80dp"
        android:layout_height="@dimen/shimmer_14dp"
        android:background="@drawable/shape_shimmer_r10"
        android:layout_marginTop="@dimen/padding_7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageContainer"/>
    <View
        android:id="@+id/textShimmer2"
        android:layout_width="60dp"
        android:layout_height="14dp"
        android:background="@drawable/shape_shimmer_r10"
        android:layout_marginTop="@dimen/padding_2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textShimmer1"/>
</androidx.constraintlayout.widget.ConstraintLayout>